# IdentityForge Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/identityforge"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# OpenRouter (free models like deepseek, glm)
OPENROUTER_API_KEY="your-openrouter-api-key"

# Local testing mode (bypass Supabase auth using local DB-backed session tokens)
# Defaults to local mode automatically when Supabase keys are missing.
NEXT_PUBLIC_LOCAL_AUTH="true"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
